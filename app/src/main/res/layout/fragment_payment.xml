<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_vip0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="@dimen/rsp15"
        android:gravity="center"
        android:text="vip0"
        app:layout_constraintBottom_toTopOf="@+id/tv_payment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_vip1"/>

    <TextView
        android:id="@+id/tv_vip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="@dimen/rsp15"
        android:gravity="center"
        android:text="vip1"
        app:layout_constraintBottom_toTopOf="@+id/tv_payment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_vip0"/>


    <TextView
        android:id="@+id/tv_payment"
        android:layout_width="0dp"
        android:layout_height="@dimen/rdp40"
        android:layout_marginTop="@dimen/rdp30"
        android:textColor="#333333"
        android:textSize="@dimen/rsp15"
        android:gravity="center"
        android:text="支付"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>