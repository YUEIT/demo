<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_test"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff000"
        app:layout_constraintTop_toTopOf="parent"/>

    <cn.yue.base.widget.keyboard.KeyboardLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/id_keyboard_container">

            <EditText
                android:id="@+id/id_keyboard_input"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="#ff0000" />

            <ImageView
                android:id="@+id/id_keyboard_switch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#fff000"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/id_keyboard_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <FrameLayout
                android:id="@+id/id_keyboard_emotion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff0000"/>
        </FrameLayout>

    </cn.yue.base.widget.keyboard.KeyboardLayout>

</androidx.constraintlayout.widget.ConstraintLayout>